    "@storybook/theming": "5.1.10",
    "babel-loader": "8.0.6",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.3",
    "np": "5.0.3",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "rollup": "1.19.4",
    "rollup-plugin-alias": "2.0.0",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-eslint": "7.0.0",
